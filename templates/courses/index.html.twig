{% extends 'base.html.twig' %}

{% block title %}Courses index{% endblock %}

{% block body %}
    <h1>Courses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.title }}</td>
                <td>{{ course.description }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.image }}</td>
                <td>
                    <a href="{{ path('app_courses_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('app_courses_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_courses_new') }}">Create new</a>
{% endblock %}
